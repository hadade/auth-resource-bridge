type Mutation {
  generateToken(request: AuthRequest!): AuthResponse!
  validateToken(request: TokenValidationRequest!): TokenValidationResponse!
}

type Query {
  hello: String
}

input AuthRequest {
  username: String!
  password: String!
}

type AuthResponse {
  token: String!
}

input TokenValidationRequest {
  token: String!
}

type TokenValidationResponse {
  valid: Boolean!
  username: String!
}